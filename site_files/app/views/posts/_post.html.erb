<h2><%= link_to(post.title, post_path(post)) %></h2>
<div class="entrybody">
  <%=raw post.body_html %>
</div>
<div class="meta">
  <ul>
    <li class="date"><%= I18n::t('posts.date') + ' ' + format_post_date(post.published_at) %></li>
    <li class="comments"><%= count = post.approved_comments.size
      link_to(I18n::t('posts.comments.' + (count == 1 ? 'one' : 'many'), :count => count), post_path(post, :anchor => 'comments')) %></li>
    <% unless post.tags.empty? -%>
      <li class="tags"><%= I18n::t('posts.tags') + ' ' + linked_tag_list(post.tags) %></li>
    <% end -%>
  </ul>
</div>

