<h2><%= I18n::t('users.show.session.title') %></h2>

<div class="entrybody">
  <ul class="list">
    <li><b>Name:</b> <%=h @user.name %></li>
    <li><b>Email:</b> <%=h @user.email %></li>
    <li><b>Login count:</b> <%=h @user.login_count %></li>
    <li><b>Last request at:</b> <%=h @user.last_request_at %></li>
    <li><b>Last login at:</b> <%=h @user.last_login_at %></li>
    <li><b>Current login at:</b> <%=h @user.current_login_at %></li>
    <li><b>Last login IP:</b> <%=h @user.last_login_ip %></li>
    <li><b>Current login IP:</b> <%=h @user.current_login_ip %></li>
  </ul>
</div>

<h2><%= t('users.show.invite.title') %></h2>
<div id="user-invite">
  <p>Enter the emails, separated by comma:</p>
  <% form_tag :controller => :session, :action => :send_invitations do  %>
    <%= text_area 'invitation', 'emails', :rows => 12 %>

    <ul class="buttons">
      <li class="commit"><%= submit_tag 'Send invitations', :class => 'button positive' %></li>
    </ul>
  <% end %>
</div>
