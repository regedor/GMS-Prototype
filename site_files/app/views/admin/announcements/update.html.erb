<% if File.exists?(Rails.root.join("app", "views", params[:controller], "_edit_sidebar.html.erb")) %>
  <% content_for :sidebar do -%>
    <%= render :partial => 'edit_sidebar' %>
  <% end -%>
<% elsif File.exists?(Rails.root.join("app", "views", params[:controller], "_sidebar.html.erb")) %>
  <% content_for :sidebar do -%>
    <%= render :partial => 'sidebar' %>
  <% end -%>
<% end -%>

<div class="content">
  <div class="inner">
    <h2><%= I18n::t('admin.announcements.form.edit') + ' - ' + link_to(h(@record.title), admin_announcement_path(@record)) %></h2>
    <% semantic_form_for :record, @record, 
                         :url => admin_announcement_path(@record), 
                         :html => { :method => :put, :id => "edit_announcement_#{@record.id}", :multipart => true } do |form| -%>
      <%= render :partial => 'form', :locals => { :form => form } %>
      <% form.buttons do -%>
        <%= form.commit_button I18n::t('admin.announcements.form.update_button'),
                               :button_html => { :class => 'button positive' } %>
        <%= form.button_link   I18n::t('admin.announcements.form.cancel_button'), admin_announcements_path,
                               :button_html => { :class => 'button negative' } %>
      <% end -%>
    <% end -%>
  </div>
</div>

