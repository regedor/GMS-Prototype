<div class="content">
  <div class="inner">
    <h2><%= t('admin.settings.edit') %></h2>

    <% semantic_form_for :setting, @setting,
                         :url => admin_setting_path(@setting),
                         :html => { 
                           :method => :put,
                           :class => 'edit', 
                           :id => 'edit_settings'
                         } do |form| -%>

      <input type="hidden" name="_method" value="put" />
      <% form.input_field_set do -%>
          <%= form.input :value,
                         :label    => "Navigation" %>
      <% end %>

      <% form.buttons do -%>
        <%= form.commit_button "Update",
                              :button_html => { :class => 'button positive' } %>
      <% end -%>

    <% end %>
  </div>
</div>