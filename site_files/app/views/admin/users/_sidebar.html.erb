<%# List page %>
<% if @records -%>
  <div class="block">
    <div id="sidebar_head">
      <h3><%= t("admin.users.sidebar.title") %></h3>
    </div>
    <div class="content">
      <p><%= t("admin.users.sidebar.paragraph") %></p>
    </div>
  </div>

  <div class="block">
    <h3><%= t("admin.users.sidebar.groups.title") %></h3>
    <div class="content">
      <p><%= t("admin.users.sidebar.groups.paragraph") %></p>
      <ul class="list">
        <% if params[:group] -%>
          <p><%= link_to I18n::t('admin.users.sidebar.groups.reset'), admin_users_path %></p>
        <% end -%>
        <% @groups.each do |group| %>
          <li class="<%= 'selected' if params[:group] == group.id.to_s %>">
            <%= link_to "#{group.name} (#{group.user_count})", admin_users_path + "?group=#{group.id}" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="block">
    <h3><%=h t("admin.users.sidebar.deleted_users.title") %></h3>
    <div class="content">
      <p><%=h t("admin.users.sidebar.deleted_users.paragraph") %></p>
      <ul class="navigation"> 
        <li><a href="<%= :deleted_users %>"><%=h t("admin.users.sidebar.deleted_users.link") %></a></li> 
     </ul> 
    </div>
  </div>
<% end -%>


<%# Revert Preview, show and delete pages %>
<%# History list %>
<% if (controller.action_name != "edit") and (@history_entry or @record && !@record.new_record?) -%>
  <div class="block">
    <h3><%= t "admin.users.sidebar.history.title", :name => @record.small_name %></h3>
    <div class="content">
      <p><%= t("admin.users.sidebar.history.paragraph") %></p>
      <ul class="options">
        <% history_rows = ( @actual_record || @record ).history_entries_list -%>
        <% if (first_entry = history_rows.shift) -%>
          <li class="<%= 'selected' unless params[:history_entry_id] %>">
            <%= link_to t("generic_sentence.time_ago", {:time_ago => time_ago_in_words(first_entry.created_at)}), 
                        admin_user_path(first_entry.historicable) %>
            <%= first_entry.user_name %>
          </li>
        <% end -%>
        <% history_rows.each do |entry| -%>
          <li class="<%= 'selected' if params[:history_entry_id].to_s == entry.id.to_s %>">
            <%= link_to t("generic_sentence.time_ago", {:time_ago => time_ago_in_words(entry.created_at)}), 
                        admin_user_path(entry.historicable,{:history_entry_id => entry.id}) %>
            <%= entry.user_name %>
          </li>
        <% end -%>
      </ul> 
    </div>
  </div>
<% end -%>


<% if  @history_entry -%>
<% end %>


<%# History show preview page %>
<% if  @history_entry -%>
  <div class="block notice">
<!--    <h3><%= t "admin.users.sidebar.reversion.title"%></h3> not coherent with pilu themes! -->
    <h4><%= t "admin.users.sidebar.reversion.subtitle"%></h4>
    <p><%= t "admin.users.sidebar.reversion.paragraph"%></p>
    <%= link_to t("admin.users.sidebar.reversion.link"), admin_history_entries_path({:id => @history_entry.id, :redirect_url => admin_user_url(@actual_record.id)}),
                 :method => :post %>
  </div>
<% end -%>


<%# Edit page %>
<% if controller.action_name == "edit" and @record -%>
  <div class="block">
    <h3><%= t("admin.users.sidebar.edit.title") %></h3>
    <div class="content">
      <p><%= t("admin.users.sidebar.edit.paragraph") %></p>
    </div>
  </div>
<% end -%>

