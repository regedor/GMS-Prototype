<h4><%= @record.name %></h4>
  <dl>
<%= image_tag avatar_url(@record) %>
    <dt><%= t("admin.users.view.email") %></dt>    <dd> <%= @record.email              %></dd>
    <dt><%= t("admin.users.view.name") %></dt>     <dd> <%= @record.name               %></dd>
    <dt><%= t("admin.users.view.nickname") %></dt> <dd> <%= @record.nickname           %></dd>
    <dt><%= t("admin.users.view.gender") %></dt>   <dd> <%= @record.gender             %></dd>
    <dt><%= t("admin.users.view.profile") %></dt>  <dd> <%= @record.profile            %></dd>
    <dt><%= t("admin.users.view.website") %></dt>  <dd> <%= @record.website            %></dd>
    <dt><%= t("admin.users.view.country") %></dt>  <dd> <%= @record.country            %></dd>
    <dt><%= t("admin.users.view.phone") %></dt>    <dd> <%= @record.phone              %></dd>
    <dt><%= t("admin.users.view.emails") %></dt>   <dd> <%= @record.emails             %></dd>
    <dt><%= t("admin.users.view.language") %></dt> <dd> <%= @record.language           %></dd>
    <dt><%= t("admin.users.view.groups") %></dt>   <dd> <%= @record.groups             %></dd>
    <dt><%= t("admin.users.view.role") %></dt>     <dd> <%= @record.role               %></dd>
  </dl>
  
<p class="form-footer">
  <%= link_to t("admin.users.view.cancel"), admin_users_path, :class => "cancel" %>  
</p>
