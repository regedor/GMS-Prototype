<% content_for(:head) do -%>
  <%= javascript_include_tag('admin/actions.js') %>
<% end -%>

<div id="main-navigation">
<ul class="wat-cf">
	<li class="<%= controller.controller_path == 'admin/settings' ? 'active' : '' %>"><a href="<%= admin_settings_path %>">Settings</a></li>
	<li class="<%= controller.controller_path == 'admin/undo_items' ? 'active' : '' %>"><a href="<%= admin_undo_items_path %>">Actions</a></li>
</ul>
</div>

<h1>Recent actions</h1>
<table cellspacing="0" cellpadding="0">
  <thead>
    <th>Date</th>
    <th>Action</th>
    <th></th>
  </thead>

  <tbody>
  <% @undo_items.each do |undo_item| -%>
    <tr class="<%= cycle('', 'alt') %>">
      <td><%=h undo_item.created_at.strftime('%d %b, %Y') %></td>
      <td><%=h undo_item.description %></td>
      <td>
        <% form_for(:undo_item, undo_item, :url => undo_admin_undo_item_path(undo_item), :html => {:class => 'undo-item', :method => :post}) do |form| -%>
          <%= image_submit_tag("silk/arrow_undo.png", :alt => 'Undo') %>
        <% end -%>
      </td>
    </tr>
  <% end -%>
  </tbody>
</table>
