<div class="block">
 <% @categories ||= categories  %>
  <h5><%= t("admin.messages.sidebar.title") %></h5>
  <div class="content">
    <ul class="navigation">
      <li><%= link_to I18n::t('admin.messages.index.create'), new_admin_project_message_path %></li>
    <% if permitted_to? :manage , @categories %>
      <li><%= link_to "Manage Categories", admin_project_categories_path %> </li>
    <% end %>
    </ul>

    <p><%= t("admin.messages.sidebar.paragraph") %></p>
    <p><%= t("admin.messages.sidebar.categories") %></p>
    <ul class="navigation">
      <li> <%= link_to "All Messages", admin_project_messages_path(params[:project_id]) %> </li>
      <% @categories.each do |category| %>
        <li><%= link_to category.name, admin_project_category_path(params[:project_id],category.id) %></li>
      <% end %>
    </ul>
  </div>
</div>
