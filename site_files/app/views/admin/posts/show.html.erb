<div class="block">
  <div class="content">
    <div class="inner">

      <h2><%= I18n::t('admin.posts.form.edit') + ' - ' + link_to(h(@post.title), admin_post_path(@post)) %></h2>

      <% semantic_form_for([:admin, @post]) do |form| -%>
        <%= render :partial => 'form', :locals => {:form => form} %>
        <% form.button_field_set do -%>
          <%= form.commit_button(I18n::t('admin.posts.form.submit')) -%>
        <% end -%>
      <% end -%>
    </div>
  </div>
</div>
