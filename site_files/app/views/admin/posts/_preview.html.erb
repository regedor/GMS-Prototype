<h2><%= link_to(h(post.title), '#') %></h2>
<div class="entrybody">
  <%= post.body_html.untaint %>
</div>
<div class="meta">
  <ul>
    <li class="date">Posted on <%= I18n::l(post.published_at) %></li>
    <li class="comments"><%= link_to(pluralize(post.approved_comments.size, "comment"), '#') %></li>
    <% unless post.tags.empty? -%>
    <li class="tags">Tagged <%= linked_tag_list(post.tags) %></li>
    <% end -%>
  </ul>
</div>
