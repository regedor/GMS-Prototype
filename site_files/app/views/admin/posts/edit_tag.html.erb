<% if File.exists?(Rails.root.join("app", "views", params[:controller], "_update_sidebar.html.erb")) %>
  <% content_for :sidebar do -%>
    <%= render :partial => 'update_sidebar'  %>
  <% end -%>
<% elsif File.exists?(Rails.root.join("app", "views", params[:controller], "_sidebar.html.erb")) %>
  <% content_for :sidebar do -%>
    <%= render :partial => 'sidebar'  %>
  <% end -%>
<% end -%>
  <div class="content">
    <div class="inner">

      <h2><%= I18n::t('admin.posts.form.edit_tag', :name => @tag.name) %></h2>

      <% semantic_form_for(@tag, :url => { :action => 'update_tag', :id => @tag.id } ) do |form| -%>
        <% form.input_field_set do -%>
          <%= form.input :name %>
        <% end -%>
        <% form.button_field_set do -%>
          <%= form.commit_button(I18n::t('admin.posts.form.submit')) -%>
        <% end -%>
      <% end -%>
    </div>
  </div>
