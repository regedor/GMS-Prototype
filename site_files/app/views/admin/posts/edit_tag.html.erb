<div class="content">
  <div class="inner">
    <h2><%= I18n::t('admin.posts.form.edit_tag', :name => @tag.name) %></h2>
    <% semantic_form_for(@tag, :url => { :action => 'update_tag', :id => @tag.id }, :html => {:multipart => true} ) do |form| -%>
      <% form.input_field_set do -%>
        <%= form.input :name %>
      <% end -%>
      <% form.buttons do -%>
        <%= form.commit_button t('admin.posts.form.update_button'),
                               :button_html => {:class => "submit"} %>
        <%= form.button_link   t('admin.posts.form.cancel_button'), admin_posts_path,
                               :button_html => {:class => "cancel"} %>
      <% end -%>
    <% end -%>
  </div>
</div>
