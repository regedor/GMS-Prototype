<% content_for(:head) do -%>
  <%= javascript_include_tag 'edit_preview' %>
<% end -%>

<% form.input_field_set do -%>
  <%= form.input :title,
                 :label    => I18n::t('admin.posts.index.columns.title') %>
  <%= form.input :body,
                 :label    => I18n::t('admin.posts.index.columns.body'),
                 :hint     => I18n::t('admin.posts.form.hints.body').html_safe %>
  <%= form.input :tag_list,
                 :as       => 'string',
                 :required => false,
                 :label    => I18n::t('admin.posts.index.columns.tag_list'),
                 :hint     => I18n::t('admin.posts.form.hints.tag_list') %>
<% end -%>

<% form.input_field_set do -%>
  <%= form.input :published_at_natural,
                 :as       => 'string',
                 :label    => I18n::t('admin.posts.index.columns.published_at'),
                 :hint     => I18n::t('admin.posts.form.hints.published_at').html_safe %>
  <%= form.input :slug,
                 :required => false,
                 :label    => I18n::t('admin.posts.index.columns.slug'),
                 :hint     => I18n::t('admin.posts.form.hints.slug') %>
  <%= form.input(:minor_edit,
                 :as       => 'boolean',
                 :label    => I18n::t('admin.posts.index.columns.minor_edit'),
                 :hint     => I18n::t('admin.posts.form.hints.minor_edit')
                 ) unless @record.new_record? %>
<% end -%>
