<div class="content">
  <div class="inner">
    <h2><%= I18n::t('admin.pages.form.edit') + ' - ' + link_to(h(@record.title), page_path(@record)) %></h2>
    <% semantic_form_for :record, @record, 
                         :url => admin_page_path(@record), 
                         :html => { :method => :put, :id => "edit_page_#{@record.id}" } do |form| -%>
      <%= render :partial => 'form', :locals => { :form => form } %>
      <% form.buttons do -%>
        <%= form.commit_button I18n::t('admin.posts.form.update_button'),
                               :button_html => { :class => 'button positive' } %>
        <%= form.button_link   I18n::t('admin.pages.form.preview_button'), '#',
                               :button_html => { :class => 'button positive preview' } %>
        <%= form.button_link   I18n::t('admin.pages.form.edit_button'), '#',
                               :button_html => { :class => 'button positive edit' } %>
        <%= form.button_link   I18n::t('admin.posts.form.cancel_button'), admin_pages_path,
                               :button_html => { :class => 'button negative' } %>
      <% end -%>
    <% end -%>
  </div>
</div>
