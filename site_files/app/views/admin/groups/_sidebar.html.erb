<% if (controller.action_name == "index") %>
 <div class="block">
    <h3><%=h t("admin.groups.index.sidebar.hierarchy.index.title") %></h3>
    <div class="content">
      <p>
        <%= t("admin.groups.index.sidebar.hierarchy.index.paragraph") %>
      </p>
    </div>
  </div>
<% end %>

<% if (controller.action_name != "edit") %>

  <div class="block">
    <h3><%=h t("admin.groups.index.sidebar.hierarchy.name") %></h3>
    <div class="content">
      <p>
        <% if @record.groups.count>0 %>
          <%=h t("admin.groups.index.sidebar.hierarchy.info.paragraph") %>
          <p>
            <%= generate_tree @record.subgroups_names_tree if @record %>
          </p>
        <% else %>
          <%=h t("admin.groups.index.sidebar.hierarchy.empty.paragraph") %>
        <% end %>
      </p>
    </div>
  </div>

<% else %>

  <div class="block">
    <h3><%=h t("admin.groups.index.sidebar.edit.title") %></h3>
    <div class="content">
      <p>
        <%= t("admin.groups.index.sidebar.edit.paragraph") %>
      </p>
    </div>
  </div>

<% end %>
