<div class="content">
  <div class="inner">
    <h2><%= I18n::t('admin.groups.form.new') %></h2>
    <% semantic_form_for :record, @record,
                         :url => admin_groups_path,
                         :html => { :class => 'create', :id => 'new_group' } do |form| -%>
      <%= render :partial => 'form', :locals => {:form => form} %>
      <% form.buttons do -%>
        <%= form.commit_button I18n::t('admin.groups.form.create_button'),
                               :button_html => { :class => 'button positive' } %>
        <%= form.button_link   I18n::t('admin.groups.form.cancel_button'), admin_groups_path,
                               :button_html => { :class => 'button negative' } %>
      <% end -%>
    <% end -%>
  </div>
</div>

