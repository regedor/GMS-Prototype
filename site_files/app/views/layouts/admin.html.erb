<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title><%= configatron.site_name %></title>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery' %>
  <%= javascript_include_tag 'utils' , 'getSelectedCheckboxes' %>
  <%= active_scaffold_includes %>
  <% configatron.theme = "simon-css3"%>
  
  <%= stylesheet_link_tag "themes/"+configatron.theme+"/formtastic",                          :cache => true %>
  <%= stylesheet_link_tag "themes/"+configatron.theme+"/formtastic_changes",                  :cache => true %>
  <%= stylesheet_link_tag "themes/"+configatron.theme+"/web_app_theme",                       :cache => true %>
  <%= stylesheet_link_tag "themes/"+configatron.theme+"/active_scaffold_override/stylesheet", :cache => true %>
  <%= stylesheet_link_tag "themes/"+configatron.theme+"/backend-theme",          :cache => true %>
  <%= stylesheet_link_tag "themes/"+configatron.theme+"/default",                :cache => true %>

  <%= yield :head %>
</head>
<body id="<%= @controller.controller_name + "_" + @controller.action_name  %>">
  <div id="container">
    <div id="header">
      <div id="user-navigation">
 
        <%= link_to icon_tag('user')+t('user_session.bar.account_link'), user_session_path %> |
        <%= link_to icon_tag('door_out')+t('user_session.bar.logout'), user_logout_path         %> 
      </div>
      <h1><a href="/"><%= configatron.site_name %></a></h1>
      <div id="main-navigation">
        <ul class="wat-cf">
          <%= navigation_menu 'admin.navigation.main.dashboard',
                              [ 'admin/dashboard' ],
                              admin_root_path,
                              :first => true %>

          <%= navigation_menu 'admin.navigation.main.website',
                              [ 'admin/posts',
                                'admin/comments',
                                'admin/announcements' ],
                              admin_posts_path %>

          <%= navigation_menu 'admin.navigation.main.system',
                              [ 'admin/settings',
                                'admin/action_entries',
                                'admin/users',
                                'admin/deleted_users',
                                'admin/groups' ],
                              admin_users_path %>
        </ul>
      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      <div id="main">
      <div class="block">
        <div class="secondary-navigation">
          <ul class="wat-cf">
            <%= secondary_navigation_menu [ { :controller_paths => 'admin/dashboard',
                                              :i18n_path => 'admin.navigation.secondary.dashboard',
                                              :link_to_path => admin_root_path } ],

                                          :specify_first => true %>

            <%= secondary_navigation_menu [ { :controller_paths => 'admin/announcements',
                                              :i18n_path => 'admin.navigation.secondary.announcements',
                                              :link_to_path => admin_announcements_path },

                                            { :controller_paths => [ 'admin/posts',
                                                                     'admin/comments'],
                                              :i18n_path => 'admin.navigation.secondary.posts',
                                              :link_to_path => admin_posts_path },

                                            { :controller_paths => '',
                                              :i18n_path => 'admin.navigation.secondary.static_pages',
                                              :link_to_path => '' } ],

                                          :specify_first => true %>

            <%= secondary_navigation_menu [ { :controller_paths => [ 'admin/users',
                                                                   'admin/deleted_users' ],
                                              :i18n_path => 'admin.navigation.secondary.users',
                                              :link_to_path => admin_users_path },

                                            { :controller_paths => 'admin/groups',
                                              :i18n_path => 'admin.navigation.secondary.groups',
                                              :link_to_path => admin_groups_path },
                                              
                                            { :controller_paths => 'admin/settings',
                                              :i18n_path => 'admin.navigation.secondary.settings',
                                              :link_to_path => admin_settings_path   } ],

                                          :specify_first => true %>
          </ul>
        </div>
      <div id="flash" class="flash">
        <%= flash_messages %>
      </div>
        <%= yield %>
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>
    <%= render :partial => 'shared/footer' %>
  </div>
</body>
</html>
