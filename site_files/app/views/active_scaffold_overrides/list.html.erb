<!-- If a sidebar file exists in the views/controller folder it is rendered, otherwise it does not -->

<% content_for(:head) do -%>
  <%= javascript_include_tag 'list_actions' %>
<% end -%>
<% if File.exists?(Rails.root.join("app", "views", params[:controller], "_sidebar.html.erb")) %>
  <% content_for :sidebar do -%>
    <%= render :partial => 'sidebar'  %>
  <% end -%>
<% end -%>
<div class="content">
  <div class="inner">
    <%= render :super %>
  </div>
</div>
