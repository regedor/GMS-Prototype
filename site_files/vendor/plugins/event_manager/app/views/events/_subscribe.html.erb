<% if event.participation_message && just_subscribed %>
  <p id="event-message"><%= nl2br(h event.participation_message) %></p>
<% end %>

<% if subscribed_activities && !subscribed_activities.empty? %>
  <div class="activities">
    <h3><%= t 'events.subscribe.activities' %></h3>
    <ul class="activity-list">
      <% subscribed_activities.map(&:event_activity).each do |activity| %>
        <li><%= activity.title %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p id="total-price"><%= t 'events.subscribe.price' %> <%= t('events.subscribe.total_value', :total_price => total_price) %></p>

<ul class="buttons">
  <% if just_subscribed %>
    <li><%= link_to t('events.subscribe.ok_button'), root_path, :class => "button positive" %></li>
  <% else %>
    <li><%= link_to t('events.subscribe.unsubscribe_button'), unsubscribe_event_path(event.id), :class => "button negative" %></li>
  <% end %>
</ul>
