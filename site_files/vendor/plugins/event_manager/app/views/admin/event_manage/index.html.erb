<div class="content">
  <div class="inner">
	<h2 class="top-title"><%= t 'admin.events.manage.title', :name => @event.name %></h2>

    <table class="events-manage">
	  <thead>
        <tr>
          <td><%= t 'admin.events.manage.table.name' %></td>
          <td><%= t 'admin.events.manage.table.email' %></td> 
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="<%= cycle("even", "odd")%>">
            <td><%= user.name %></td>
            <td><%= user.email %></td>
          </tr>
        <% end %>	
      </tbody>	
    </table>

    <%= will_paginate @users %>

    <form action="event_manage/download" class="download" method="get">
      <input class="button positive" type="submit" value="<%= t 'admin.events.manage.download' %>" />
   </form>
  </div>
</div>