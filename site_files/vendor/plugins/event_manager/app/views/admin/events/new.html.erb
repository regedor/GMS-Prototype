<% if File.exists?(Rails.root.join("app", "views", params[:controller], "_new_sidebar.html.erb")) %>
  <% content_for :sidebar do -%>
    <%= render :partial => 'new_sidebar' %>
  <% end -%>
<% elsif File.exists?(Rails.root.join("app", "views", params[:controller], "_sidebar.html.erb")) %>
  <% content_for :sidebar do -%>
    <%= render :partial => 'sidebar' %>
  <% end -%>
<% end -%>

<div class="content">
  <div class="inner">
    <h2><%= I18n::t('admin.project.form.new') %></h2>
    <% semantic_form_for @event, :url => admin_events_url do |f| %>
      <% f.inputs do %>
        <%= f.input :title, :as => :string, :label => t('admin.events.view.title') %>
        <%= f.input :description, :as => :string, :label => t('admin.events.view.description') %>
        <%= f.input :starts_at, :label => t('admin.events.view.starts_at') %>
        <%= f.input :ends_at, :label => t('admin.events.view.ends_at') %>
        <%= f.input :price, :as => :numeric, :label => t('admin.events.view.price') %>
        <%= f.input :participation_message, :as => :text, :label => t('admin.events.view.participation_message') %>
      <% end %>
      <% f.buttons do %>
        <%= f.commit_button :label => t('admin.events.new.commit_button'),
                            :button_html => { :class => 'button positive' } %>
        <%= f.button_link t("admin.project.new.cancel"), admin_events_path,
                          :button_html => { :class => 'button negative' } %>
      <% end %>
    <% end %>
  </div>
</div>
