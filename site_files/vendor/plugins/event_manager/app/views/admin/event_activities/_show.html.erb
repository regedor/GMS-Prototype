<div id="activity_<%= activity.id %>" class="activity_<%= activity.id %>">
  <div id="show" class="show">
    <h2><%= activity.title %></h2>
    <% if activity.description_html %> 
	  <%= t("admin.events.view.description") %>
	  <span class="description"><%= activity.description_html       %></span>
	<% end %>
	
    <% if activity.price %> 
	  <%= t("admin.events.view.price") %>
	  <span class="price"><%= activity.price %></span>
	<% end %>
	
    <% if activity.starts_at %> 
	  <%= t("admin.events.view.starts_at")  %> 
	  <span class="starts_at"><%= activity.starts_at %></span>
	<% end %>
	
    <% if activity.ends_at   %> 
	  <%= t("admin.events.view.ends_at") %>
	  <span class="ends_at"><%= activity.ends_at   %></span>
    <% end %> 
  </div>
  <%= link_to "Edit", edit_admin_event_event_activity_path(@record,activity) %>
  <%= link_to "Delete", "#", :class => "delete", :onclick => "jQuery(this).delete();" %>
</div>
