<div id="activity_<%= @record.id %>" class="activity_<%= @record.id %>"></div>

<div id="show" class="show">
  <h2><%= @record.title %></h2>

  <% if @record.description_html %><%= t("admin.events.view.description_html") %><span class="description"><%= @record.description_html %></span><% end %>
  <% if @record.price %><%= t("admin.events.view.price") %><span class="price"><%= @record.price %></span><% end %>
  <% if @record.starts_at %><%= t("admin.events.view.starts_at") %><span class="starts_at"><%= @record.starts_at %></span><% end %>
  <% if @record.ends_at %><%= t("events.view.ends_at") %><span class="ends_at"><%= @record.ends_at %></span><% end %> 

  <ul class="buttons">
    <li><input type=button value="<%= t('events.view.button.update') %>" class="button positive create"></li>
    <li><%= link_to t("events.view.cancel"), event_path, :class => "button negative cancel" %></li>
  </ul>
</div>
