<% semantic_form_for(:todo, @todo, :url => admin_project_to_dos_path) do |f| %>
  <% f.inputs do %>
    <%= f.input :description, :as => :text, :input_html => {:rows => 3, :cols => 40}, :label => t("admin.to_do.edit.title"), :required => false %>
	<%= f.input :user_id, :label => t("admin.to_do.edit.responsible") , :as => :select, :collection => User.all, :required => false, :hint => t("admin.to_do.edit.hint") %>
	<%= f.input :due_date, :as => :string, :required => false, :input_html => {:class => "datepicker"} %>			
	<%= f.input :to_do_list_id, :as => :hidden %>
  <% end  %>
  <% f.buttons do %>
    <%= f.commit_button :label => t("admin.to_do.edit.edit_button") %>
    <span>or</span>
	<%= link_to t("admin.to_do.edit.cancel"), "#",{:class => "cancel_link"} %>
  <% end %>
<% end %>