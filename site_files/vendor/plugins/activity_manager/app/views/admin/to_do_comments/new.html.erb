<div class="content">
  <div class="header">	
    <div class="title">
      <%= t("admin.to_do.comment.title", :list => @todo.to_do_list.name) %>
    </div>
    <% classStr = (@todo.done? ? "meta done" : "meta notDone") %>		
    <div class="<%= classStr %>">	
      <span class="responsible"><%= @todo.user.name %></span>:
      <span class="description"><%= @todo.description %></span>
    </div>
  </div>
  <div class="comments">
	<% @todo.comments.each do |comment| %>
	  <div class="avatar"><%= image_tag avatar_url(comment.user,:size => :small) %></div>
	  <div class="comments_meta">
		<span class="name"><%= comment.user.name %></span>
		<spna class="date"><%= l(comment.created_at, :format => :default) %></span>
	  </div>
	  <span class="text">
		<%= comment.body_html %>
	  </span>		
	<% end %>
  </div>	
  <div class="comment">
	<div class="avatar"><%= image_tag avatar_url(@todo.user,:size => :small) %></div>
	<span class="hint"><%= t("admin.to_do.comment.hint") %></span>
	<% semantic_form_for @comment, :url => admin_project_to_do_comments_path(params[:project_id],@todo.id), :html => {:method => :post} do |f| %>
	  <% f.inputs do %>
	    <%= f.input :body, :as => :text, :label => t("admin.to_do_comment.new.body") %>
	    <%= f.input :users, :as => :check_boxes, :collection => @project.users, :label => t("admin.to_do_comment.new.users") %>
	  <% end  %>
	  <% f.buttons do %>
	   <%= f.commit_button :label => t("admin.to_do_comment.new.create_button") %>
	   <%= link_to t("admin.to_do_comment.new.preview_button"), admin_project_to_do_lists_path(params[:project_id]) %>
     <% end %>
   <% end %>
  </div>	
</div>