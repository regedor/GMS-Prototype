<div class="content">
  <div class="header">	
    <div class="title">
      <%= t("admin.to_do.comment.title", :list => @todo.to_do_list.name) %>
    </div>		
    <div class="meta">	
      <span class="responsible"><%= @todo.user.name %></span>:
      <span class="description"><%= @todo.description %></span>
    </div>
  </div>
  <div class="comment">
	<span class="avatar"><%= image_tag avatar_url(@todo.user,:size => :small) %></span>
	<span class="hint"><%= t("admin.to_do.comment.hint") %></span>
	<% semantic_form_for @comment, :url => admin_project_to_do_comments_path(params[:project_id],@todo.id), :html => {:method => :post} do |f| %>
	    <% f.inputs do %>
		  <%= f.input :body, :as => :text, :label => t("admin.to_do_list.new.name") %>
	    <% end  %>
	    <% f.buttons do %>
		  <%= f.commit_button :label => t("admin.to_do_list.new.create_button") %>
		  <%= link_to t("admin.to_do_list.new.cancel_button"), admin_project_to_do_lists_path(params[:project_id]) %>
		<% end %>
	  <% end %>
  </div>	
</div>