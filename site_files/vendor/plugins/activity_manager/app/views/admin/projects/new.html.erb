<% if File.exists?(Rails.root.join("app", "views", params[:controller], "_new_sidebar.html.erb")) %>
  <% content_for :sidebar do -%>
    <%= render :partial => 'new_sidebar' %>
  <% end -%>
<% elsif File.exists?(Rails.root.join("app", "views", params[:controller], "_sidebar.html.erb")) %>
  <% content_for :sidebar do -%>
    <%= render :partial => 'sidebar' %>
  <% end -%>
<% end -%>

<div class="content">
  <div class="inner">
    <h2><%= I18n::t('admin.project.form.new') %></h2>
    <% semantic_form_for @project, :url => admin_projects_path, :html => {:method => :post} do |f| %>
      <% f.inputs do %>
        <%= f.input :name, :as => :string, :label => t("admin.project.new.name") %>
        <%= f.input :description, :as => :text, :label => t("admin.project.new.description"), :required => false %>
        <%= f.input :users, :as => :check_boxes, :collection => @users, :label => t("admin.project.new.users"), :required => false %>
      <% end  %>
      <% f.buttons do %>
        <%= f.commit_button :label => t("admin.project.new.create_button"),
                            :button_html => { :class => 'button positive' }%>
        <%= f.button_link t("admin.project.new.cancel"), admin_projects_path,
                          :button_html => { :class => 'button negative' } %>
      <% end %>
    <% end %>
  </div>
</div>
