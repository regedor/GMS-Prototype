  <div class="content">
    <div class="inner">

      <h2><%= I18n::t('admin.messages.form.edit') %></h2>

      <% semantic_form_for :record, @record,
                           :url => admin_project_message_path(params[:project_id],@record),
                           :html => { :method => :put } do |form| 
      -%>

	<%= render :partial => 'form', :locals => {:form => form} %>

        <p class="form-footer">
          <% form.buttons do -%>

            <%= form.commit_button t('admin.messages.form.update_button'),
                                   :button_html => {:class => "submit"} %>
            <%= form.button_link   t('admin.messages.form.cancel_button'), admin_project_message_path,
                                   :button_html => {:class => "cancel"} %>
          <% end -%>
        </p>

      <% end -%>
    </div>
  </div>
