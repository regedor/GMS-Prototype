<% if (controller.action_name == "index") %>
<div class="block">

  <h3><%= t("admin.messages.sidebar.title") %></h3>
  <div class="content">
    <ul>
      <li><%= link_to I18n::t('admin.messages.index.create'), new_admin_project_message_path %></li>
    </ul>
  
    <p><%= t("admin.messages.sidebar.paragraph") %></p>
    <p><%= t("admin.messages.sidebar.categories") %></p>
    <ul class="navigation">
    <li> <%= link_to "All Messages", admin_project_messages_path(params[:project_id]) %> </li>
    <% @categories.each do |c| %>
     <li><%= link_to c.name, admin_project_category_path(params[:project_id],c.id) %></li>
     <p>
    <% end %>
    
    <% if permitted_to? :manage %>
        <%= link_to "Manage Categories", admin_project_categories_path %>
    <% end %>
    

    </ul>
  </div>
</div>


<% end %>


