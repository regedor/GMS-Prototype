<h2><%= message.title %></h2>
<div class="meta">
  <ul>
  <li class="author"><%= I18n::t('admin.messages.form.from')%>: <%= User.find(message.user_id).first_and_last_name %></li>
  <li class="date"><%= I18n::t('admin.messages.form.date')%>: <%= message.created_at.strftime("%a, %d %b %Y, %I:%M %p") %></li>
  </ul>
</div>
<hr>

<div class="entrybody">
  <%= raw message.body_html %>
</div>
<div class="comments">
  <table>
  <% @comments.each do |comment| %>
   <div id="comment-<%= comment.id %>">
      <div class="comment_header"> 
        <%= User.find(comment.user_id).first_and_last_name %> <%= message.created_at.strftime("%a, %d %b %Y, %I:%M %p") %>
      </div>
      <div class="comment_textile">
        <%= raw comment.body_html %>
      </div>

    </div>
  <% end %>
  </table>
  
    <% semantic_form_for :record, @record,
                           :url => admin_project_message_messages_comments_path(params[:project_id],message.id),
                           :html => { :method => 'post' } do |form| -%>  
                           
    <% form.input_field_set do -%>

	<%= form.input :body,
                         :label    => I18n::t('admin.messages.columns.body'),
                         :hint     => I18n::t('admin.messages.form.hints.body').html_safe %>
    <%= form.hidden_field :message_id, :value => message.id %>
    <%= form.commit_button t('admin.messages.form.create_button'),
                                   :button_html => {:class => "submit"} %>

    <% end -%> 
    <% end -%>
</div>
