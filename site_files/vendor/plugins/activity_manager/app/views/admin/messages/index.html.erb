<div id="content">
    <%= link_to I18n::t('admin.messages.index.create'), new_admin_project_message_path %>


    <% if @messages.empty? %>
      <p> <%= I18n::t('admin.messages.list.empty') %> </p>
    <% else %>
  <div id="messages">
      <% @messages.each do |message| -%>

        <table class="message_table">
          <tr id="message-<%= message.id %>">
            <a class=""> <%= link_to message.title, admin_project_message_path(params[:project_id],message.id) %>
            
             <span class="meta"> <%= User.find(message.user_id).first_and_last_name %> <%= I18n::t('admin.messages.index.author_on_date')%> <%= message.created_at.strftime("%a, %d %b %Y, %I:%M %p")%></span>
                <td class="info">

                </td>
          </tr>	
          </table>  
        
      <% end -%>

  </div>  
<% end %>


  </div>

</div>
