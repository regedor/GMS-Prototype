<div id="content">

 <% content_for :sidebar do -%>
  <%= render :partial => 'admin/messages/sidebar.html.erb', :locals => {:project_id => params[:project_id]}  %>
 <% end -%>

 <div class="message_title">
  <%= I18n::t('admin.messages.list.title') %>
 </div>

 <% if @messages.empty? %>
  <p><%= I18n::t('admin.messages.list.empty') %> </p>
 <% else %>
    
 <div class="messages">
  <% @messages.each do |message| -%>
   <table class="message_table">
    <tr id="message-<%= message.id %>">
    <a class="message_title"> <%= link_to message.title, admin_project_message_path(params[:project_id],message.id) %>   
    <span class="message_meta"> <%= User.find(message.user_id).first_and_last_name %> <%= I18n::t('admin.messages.index.author_on_date')%> <%= l(message.created_at,:format => :default)%></span>
     <td class="info">           
     </td>
    </tr>	
   </table>  
  <% end -%>
 </div>  
 <% end %>
</div>

